<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.PersonsFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="800px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="@string/personAmmountText"
            android:textAlignment="center"
            android:textSize="36sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintGuide_begin="186dp"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button14"
            android:layout_width="193px"
            android:layout_height="40px"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary"
            android:onClick="onPlusMinusClicked"
            android:text="+"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/personsCount"
            app:layout_constraintTop_toBottomOf="@+id/button11" />

        <Button
            android:id="@+id/button11"
            android:layout_width="193px"
            android:layout_height="40px"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary"
            android:onClick="onPersonsButtonClicked"
            android:text="9"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/personsCount"
            app:layout_constraintTop_toBottomOf="@+id/button8" />

        <Button
            android:id="@+id/button8"
            android:layout_width="193px"
            android:layout_height="40px"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary"
            android:onClick="onPersonsButtonClicked"
            android:text="6"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/personsCount"
            app:layout_constraintTop_toBottomOf="@+id/button5" />

        <Button
            android:id="@+id/button5"
            android:layout_width="193px"
            android:layout_height="40px"
            android:layout_marginTop="40dp"
            android:background="@color/colorPrimary"
            android:onClick="onPersonsButtonClicked"
            android:text="3"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/personsCount"
            app:layout_constraintTop_toTopOf="@+id/guideline" />

        <Button
            android:id="@+id/button16"
            android:layout_width="180px"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:background="@color/colorPrimary"
            android:onClick="onTableReserve"
            android:text="@string/reserverText"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/personsCount"
            app:layout_constraintStart_toEndOf="@+id/personsCount"
            app:layout_constraintTop_toTopOf="@+id/personsCount" />

        <Button
            android:id="@+id/button3"
            android:layout_width="193px"
            android:layout_height="40px"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary"
            android:onClick="onPersonsButtonClicked"
            android:text="5"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/button2"
            app:layout_constraintTop_toBottomOf="@+id/button6" />

        <Button
            android:id="@+id/button9"
            android:layout_width="193px"
            android:layout_height="40px"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary"
            android:onClick="onBackspaceClicked"
            android:text="BackSpace"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/button7"
            app:layout_constraintTop_toBottomOf="@+id/button15" />

        <Button
            android:id="@+id/button15"
            android:layout_width="193px"
            android:layout_height="40px"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary"
            android:onClick="onPersonsButtonClicked"
            android:text="0"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/button7"
            app:layout_constraintTop_toBottomOf="@+id/button12" />

        <Button
            android:id="@+id/button12"
            android:layout_width="193px"
            android:layout_height="40px"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary"
            android:onClick="onPersonsButtonClicked"
            android:text="8"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/button2"
            app:layout_constraintTop_toBottomOf="@+id/button3" />

        <Button
            android:id="@+id/button6"
            android:layout_width="193px"
            android:layout_height="40px"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:background="@color/colorPrimary"
            android:onClick="onPersonsButtonClicked"
            android:text="2"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/button2"
            app:layout_constraintTop_toTopOf="@+id/guideline" />

        <Button
            android:id="@+id/button2"
            android:layout_width="193px"
            android:layout_height="40px"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary"
            android:onClick="onPersonsButtonClicked"
            android:text="4"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/personsCount"
            app:layout_constraintTop_toBottomOf="@+id/button4" />

        <Button
            android:id="@+id/button7"
            android:layout_width="193px"
            android:layout_height="40px"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary"
            android:onClick="onPlusMinusClicked"
            android:text="-"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/personsCount"
            app:layout_constraintTop_toBottomOf="@+id/button10" />

        <Button
            android:id="@+id/button10"
            android:layout_width="193px"
            android:layout_height="40px"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary"
            android:onClick="onPersonsButtonClicked"
            android:text="7"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/personsCount"
            app:layout_constraintTop_toBottomOf="@+id/button2" />

        <Button
            android:id="@+id/button4"
            android:layout_width="193px"
            android:layout_height="40px"
            android:layout_marginTop="40dp"
            android:background="@color/colorPrimary"
            android:onClick="onPersonsButtonClicked"
            android:text="1"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/personsCount"
            app:layout_constraintTop_toTopOf="@+id/guideline" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/tipText"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@android:drawable/ic_menu_info_details"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/personsCount"
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="false"
            android:ems="10"
            android:enabled="false"
            android:inputType="numberSigned"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/errorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incorrecte invoer!"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>